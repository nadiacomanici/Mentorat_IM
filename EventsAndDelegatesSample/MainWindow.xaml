<Window x:Class="EventsAndDelegatesSample_StudentName.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventsAndDelegatesSample_StudentName"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>
    <StackPanel>
        <Label Name="labelName" Content="Label" HorizontalAlignment="Left"/>
        <Button Name="btnAppendName" Content="Adauga 'ion' la nume" HorizontalAlignment="Left"
                VerticalAlignment="Top" Click="btnAppendName_Click"/>
        <Button Name="btnAbonareCuMessageBox" Content="Abonare Cu MessageBox" Click="BtnAbonareCuMessageBox_Click"/>
        <Button Name="btnDezbonareCuMessageBox" Content="Dezabonare Cu MessageBox" Click="BtnDezbonareCuMessageBox_Click"/>
    </StackPanel>
</Window>
