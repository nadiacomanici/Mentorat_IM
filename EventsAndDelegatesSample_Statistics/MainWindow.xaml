<Window x:Class="EventsAndDelegatesSample_Statistics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventsAndDelegatesSample_Statistics"
        xmlns:ctrl="clr-namespace:EventsAndDelegatesSample_Statistics.UIControls"
        mc:Ignorable="d"
        Title="Registered Students and Statistics" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ctrl:ListDisplayControl Grid.RowSpan="2" x:Name="ctrlDisplayList" Margin="10"/>
        <ctrl:AdmissionMarkStatisticsControl Grid.Row="0" Grid.Column="1" x:Name="ctrlAdmissionStatistics" Margin="30"/>
        <ctrl:GenderStatisticsControl Grid.Row="1" Grid.Column="1" x:Name="ctrlGenderStatistics" Margin="30"/>
    </Grid>
</Window>
